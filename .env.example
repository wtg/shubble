# =============================================================================
# SHUBBLE ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update with your values

# =============================================================================
# SERVICE PORTS (Docker)
# =============================================================================
# Configure which ports services are exposed on the host machine
FRONTEND_PORT=3000
BACKEND_PORT=8000
POSTGRES_PORT=5432
REDIS_PORT=6379
TEST_FRONTEND_PORT=5174
TEST_BACKEND_PORT=4000

# =============================================================================
# SERVICE URLS
# =============================================================================
# Configure URLs for all services
# Format: http://host:port (do not include trailing slash)

# Main application URLs
FRONTEND_URL=http://localhost:3000
VITE_FRONTEND_URL=http://localhost:3000
VITE_BACKEND_URL=http://localhost:8000

# Test/Mock service URLs (for development/testing)
TEST_FRONTEND_URL=http://localhost:5174
VITE_TEST_FRONTEND_URL=http://localhost:5174
VITE_TEST_BACKEND_URL=http://localhost:4000

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL credentials
POSTGRES_DB=shubble
POSTGRES_USER=shubble
POSTGRES_PASSWORD=shubble

# PostgreSQL connection string
DATABASE_URL=postgresql://shubble:shubble@localhost:5432/shubble

# =============================================================================
# REDIS CACHE
# =============================================================================
# Redis connection string
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
ENV=development
DEBUG=true

# Logging Configuration
# LOG_LEVEL: Global default logging level for all components
# Valid values: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Component-specific logging levels (optional)
# If not set, falls back to LOG_LEVEL
# Uncomment and set to override for specific components:

# FASTAPI_LOG_LEVEL: FastAPI backend API server logging
# FASTAPI_LOG_LEVEL=INFO

# WORKER_LOG_LEVEL: Background worker logging (GPS data polling, predictions)
# WORKER_LOG_LEVEL=INFO

# ML_LOG_LEVEL: Machine learning pipeline logging (training, preprocessing)
# ML_LOG_LEVEL=INFO

# Example: Debug worker but keep other components at INFO level
# LOG_LEVEL=INFO
# WORKER_LOG_LEVEL=DEBUG

# =============================================================================
# SAMSARA API (Optional - for production)
# =============================================================================
# Leave empty to use Mock Samsara API (test-server) in development
API_KEY=
SAMSARA_SECRET_BASE64=
