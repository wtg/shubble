# Test Client Dockerfile for Mock Samsara UI
FROM node:24-alpine AS builder

WORKDIR /app

# Copy package files
COPY test-client/package*.json ./test-client/

# Install dependencies
WORKDIR /app/test-client
RUN npm ci

# Copy source files
COPY test-client/ ./

# Build the application
RUN npm run build

# Production stage with nginx
FROM nginx:alpine

# Copy built files to nginx
COPY --from=builder /app/test-client/dist /usr/share/nginx/html

# Copy config template and entrypoint for runtime env substitution
COPY test-client/config.template.json /usr/share/nginx/html/config.template.json
COPY docker/test-client/entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Copy nginx configuration
COPY docker/test-client/nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

ENTRYPOINT ["/entrypoint.sh"]
