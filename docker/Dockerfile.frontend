# Frontend Dockerfile for Shubble
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY frontend/package*.json ./frontend/

# Install dependencies
RUN npm ci

# Copy source files and data
COPY frontend/ ./frontend/
COPY data/ ./data/
COPY vite.config.ts ./
COPY tsconfig*.json ./

EXPOSE 5173

CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]