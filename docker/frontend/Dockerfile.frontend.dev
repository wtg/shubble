# Development Frontend Dockerfile for Shubble
FROM node:24-alpine

WORKDIR /app

# --- Shared setup (same as prod) ---
# Copy package files
COPY frontend/package*.json ./frontend/

# Install dependencies
RUN cd frontend && npm ci

# Copy source files and shared data
COPY frontend/ ./frontend/
COPY shared/ ./shared/

# --- End shared setup ---

EXPOSE 3000

CMD ["sh", "-c", "cd frontend && npm run dev -- --host 0.0.0.0 --port 3000"]
